<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeBook" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:textColor">@color/black</item>

        <item name="colorControlNormal">@color/black</item>

        <item name="ratingBarStyle">@style/RatingBar</item>

        <item name="colorPrimary">@color/sec_color</item> <!--ActionBar-->
        <item name="colorPrimaryDark">@color/black</item> <!--StatusBar-->
        <!--<item name="colorAccent">@color/white</item> ???-->
        <item name="android:textCursorDrawable">@drawable/text_cursor_color</item> <!--textCursor-->

        <item name="android:textColorLink">@color/center_orange</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:colorControlActivated">@color/center_orange</item>
    </style>

    <style name="Theme.RecipeBook" parent="Base.Theme.RecipeBook" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/center_orange</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/center_orange</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/center_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/center_orange</item>

    </style>

    <style name="SearchViewStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/center_orange</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/center_orange</item>
    </style>

    <style name="FavoriteCheckBoxStyle" parent="Theme.AppCompat.DayNight">
        <!-- Применяем фоновое изображение к самому флажку -->
        <item name="android:button">@drawable/selector_favorite_item</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.DayNight">
        <item name="background">@drawable/bg_rounded_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/main_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_orange</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.RecipeBook</item>
    </style>

</resources>