<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainpages.more.addrecipe.AddRecipeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="0dp"
            android:paddingVertical="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="@string/recipe_title"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:justificationMode="inter_word"
                android:paddingHorizontal="20dp"
                android:text="@string/recipe_title_desc"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_rounded_corner"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recipe_name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_corner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <EditText
                        android:id="@+id/ed_RecipeName_AddRecipePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/name"
                        android:theme="@style/EditTextStyle" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recipe_desc"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_corner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <EditText
                        android:id="@+id/ed_RecipeDesc_AddRecipePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/recipe_desc"
                        android:theme="@style/EditTextStyle" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recipe_difficult"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:text="@string/recipe_difficult_desc"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_corner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <EditText
                        android:id="@+id/ed_Difficult_AddRecipePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/recipe_difficult"
                        android:inputType="number"
                        android:theme="@style/EditTextStyle" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recipe_cooking_time"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:text="@string/recipe_cooking_time_desc"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_corner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <EditText
                        android:id="@+id/ed_RecipeTime_AddRecipePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/recipe_desc"
                        android:theme="@style/EditTextStyle" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recipe_ingredients"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:text="@string/recipe_ingredients_desc"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_rounded_corner"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp">

                        <EditText
                            android:id="@+id/ed_RecipeIngredients_AddRecipePage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/name"
                            android:theme="@style/EditTextStyle" />

                        <ImageButton
                            android:id="@+id/btn_addIngredient_AddRecipePage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/min_orange" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_ingredients_AddRecipePage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        tools:listitem="@layout/rv_ingredients" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/recipe_preview_image"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="4dp"
                    android:text="@string/recipe_preview_image_desc"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_previewImage_AddRecipePage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginVertical="16dp"
                    android:visibility="gone"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:id="@+id/iv_PreviewImage_AddRecipePage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_add_previewImg_AddRecipePage"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_rounded_corner"
                    android:backgroundTint="@color/element_color"
                    android:paddingHorizontal="24dp"
                    android:text="@string/add" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_steps"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="4dp"
                    android:text="@string/recipe_steps_desc"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_rounded_corner"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp">

                        <EditText
                            android:id="@+id/ed_RecipeSteps_AddRecipePage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/recipe_steps_ed"
                            android:theme="@style/EditTextStyle" />

                        <ImageButton
                            android:id="@+id/btn_addStep_AddRecipePage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/min_orange" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_steps_AddRecipePage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        tools:listitem="@layout/rv_ingredients"
                        android:layout_marginBottom="32dp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_recipe_AddRecipePage"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_rounded_corner"
                android:text="@string/save"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>